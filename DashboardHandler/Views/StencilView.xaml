<UserControl x:Class="DashboardHandler.Views.StencilView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:stencil="clr-namespace:Syncfusion.UI.Xaml.Diagram.Stencil;assembly=Syncfusion.SfDiagram.WPF"
             xmlns:local="clr-namespace:DashboardHandler.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="350">

    <UserControl.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DashboardHandler;component/Resources/SymbolsTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="stencil:Symbol">
                <Setter Property="Width" Value="400" />
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid>
        <stencil:Stencil SymbolSource="{Binding SymbolSource}" 
                         ShowSearchTextBox="False"/>
    </Grid>
</UserControl>
